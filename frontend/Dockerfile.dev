FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy configuration files
COPY angular.json tsconfig.json tsconfig.app.json tsconfig.spec.json ./
COPY tailwind.config.js ./

# Create source directory
RUN mkdir -p src

EXPOSE 4200

# Development server with hot reload
CMD ["npm", "start"]